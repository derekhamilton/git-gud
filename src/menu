#!/bin/bash

menu () {
    options=$(get-options | awk -F '|' "{printf(\"\x1b[34;1m%s|\x1b[33;1m%s\x1b[m|%s\n\", \$1, \$2, \$3)}")
    target=$(echo "$options" | format-columns | fzf --ansi --preview="")

    if [ -n "$target" ]; then
        cmd=$(echo "$target" | awk -F"  " '{print $1}')
        bash -c "$cmd"
    fi
}
